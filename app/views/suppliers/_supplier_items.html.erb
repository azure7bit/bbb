<div class="box span6">
  <div class="box-content">
    <h2>List Products</h2>
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
      <thead>
        <tr>
          <th>Code Items</th>
          <th>Item</th>
          <th>Category</th>
          <th>Stock</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% supplier.supplier_items do |supplier_item| %>
          <tr>
            <td><%= supplier_item.item_code %></td>
            <td class="center"><%= supplier_item.item_name %></td>
            <td class="center"><%= supplier_item.item.category_name %></td>
            <td class="center"><%= supplier_item.item_stock %></td>
            <td class="center"><%= supplier_item.purchase_price %></td> 
          </tr>
        <% end %>
      </tbody>
    </table> 
  </div>
</div><!--/span-->

<div class="modal hide fade" id="myModal">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Settings</h3>
  </div>
  <div class="modal-body">
    <div class="fields">
      <%= label_tag "Items Code" %>
    </div>
    <%= f.fields_for :supplier_items do |supplier_item| %>
      <%= text_field_tag :item_code, nil, :class=>"input", :style => "max-width: 80px;" %>
      <%= text_field_tag :item_name, nil, :class=>"input", :style => "max-width: 80px;" %>
      <%= text_field_tag :category_name, nil, :class=>"input", :style => "max-width: 80px;" %>
      <%= supplier_item.text_field :purchase_price, :style => "max-width: 80px;" %>
      <%= supplier_item.link_to_remove "Hapus" %>
    <% end %>
    <%= f.link_to_add "Add Items", :supplier_items %>
  </div>
  <div class="modal-footer">
    <a href="#" class="btn" data-dismiss="modal">Close</a>
    <a href="#" class="btn btn-primary">Save changes</a>
  </div>
</div>