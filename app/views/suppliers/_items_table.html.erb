<div class="box span6">
  <div class="box-content">
    <h2>List Items</h2>
    <table id="items-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Code Items</th>
          <th>Item</th>
          <th>Category</th>
          <!-- <th>Stock</th> -->
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :supplier_items do |supplier_item| %>
          <tr class="fields">
            <td><%= text_field_tag :item_code %></td>
            <td><%= text_field_tag :item_name %></td>
            <td><%= text_field_tag :category_name %></td>
            <td><%= supplier_item.text_field :purchase_price %></td>
            <td>
              <%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, supplier_item, :title => "Delete this Pilot.") %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr><td><%= link_to_add_fields("Add a Item", f, :supplier_items, :class => "btn btn-primary") %></td></tr>
      </tfoot>
    </table> 
    <%= link_to print_preview_suppliers_path(id: @supplier), { :class=>"btn", :id => 'print_all', :target => "_blank"} do %>
      <i class="icon-print"></i> 
      Print Items
    <% end %>
  </div>
</div><!--/span-->