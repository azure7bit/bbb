<div class="modal hide fade" id="new-item-fields">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">Ã—</button>
    <h3>Settings</h3>
  </div>
  <div class="modal-body">
    <fieldset>
      <div class="control-group">
        <%= f.label :code, :class => "control-label" %>
        <div class="controls">
          <%= f.select :item_id, options_for_select(@items), {}, :'data-rel'=>"chosen", :class => "field" %>
        </div>
      </div>
      <%= f.fields_for :items do |item| %>
        <div class="control-group">
          <%= item.label :name, "Item", :class => "control-label" %>
          <div class="controls">
            <%= item.text_field :name, :class => "input field" %>
          </div>
        </div>
        <%= item.fields_for :category do |category| %>
          <div class="control-group">
            <%= category.label :name, "Category", :class => "control-label" %>
            <div class="controls">
              <%= category.text_field :name, :class => "input field" %>
            </div>
          </div>
        <% end %>
      <% end %>
      <div class="control-group">
        <%= f.label :purchase_price, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :purchase_price, :class => "input field" %>
        </div>
      </div>
    </fieldset>
    <%= f.hidden_field(:_destroy, :class => "field") %>
  </div>
  <div class="modal-footer">
    <button id="addButton" type="button" class="btn btn-primary" 
    data-dismiss="modal" aria-hidden="true">Add</button>
    <button id="cancelButton" type="button" class="btn btn-inverse" 
    data-dismiss="modal" aria-hidden="true">Cancel</button>
  </div>
  </div>
</div>

<script type="text/javascript">
  itemFieldsUI.init();
</script>