<div class="box span12">
  <div class="box-content">
    <h2>List Items</h2>
    <table id="items-table" class="table table-striped table-bordered bootstrap-datatable datatable">
      <thead>
        <tr>
          <th>Item</th>
          <th>Tanggal</th>
          <th>Harga</th>
          <th>Harga Selanjutnya</th>
          <th>Stock</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :supplier_items do |supplier_item| %>
          <tr class="fields">
            <td>
              <%= supplier_item.text_field :item_name, readonly: true %>
              <%= supplier_item.hidden_field :item_id, readonly: true, :class => 'supplier_item' %>
            </td>
            <td><%= supplier_item.text_field :item_date_price %></td>
            <td><%= supplier_item.text_field :item_price %></td>
            <td><%= supplier_item.text_field :item_next_price %></td>
            <td><%= supplier_item.text_field :stock %></td>
            <td><%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, supplier_item) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>