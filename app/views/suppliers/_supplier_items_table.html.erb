<div class="box span12">
  <div class="box-content">
    <h2>List Items</h2>
    <table id="items-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Code Items</th>
          <th>Item</th>
          <th>Price</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :supplier_items do |supplier_item| %>
          <tr class="fields">
            <td><%= supplier_item.text_field :item_code, readonly: true %></td>
            <td><%= supplier_item.text_field :item_name %></td>
            <td><%= supplier_item.text_field :purchase_price, readonly: true %></td>
            <td>
              <%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, supplier_item) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>