<div class="box span12">
  <div class="box-content">
    <h2>List Items</h2>
    <table id="items-table" class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>Nama Barang</th>
          <th>Harga</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :supplier_items do |supplier_item| %>
          <tr class="fields">
            <td>
              <%= supplier_item.text_field :item_name, readonly: true %>
              <%= supplier_item.hidden_field :item_id, readonly: true, :class => 'supplier_item' %>
            </td>
            <td>
              <%= supplier_item.fields_for :supplier_item_prices do |supplier_item| %>
                <%= supplier_item.text_field :price, readonly: true %>
              <% end %>
            </td>
            <td>
              <%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, supplier_item) %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>