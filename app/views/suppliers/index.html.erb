<div id="content" class="span10">
  <!-- content starts -->

  <div>
    <ul class="breadcrumb">
      <li>
        <a href="#">Home</a> <span class="divider">/</span>
      </li>
      <li>
        <a href="#">Tables</a>
      </li>
    </ul>
  </div>
      
  <div class="row-fluid sortable">    
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Supplier</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <td colspan="6"></td>
              <td class="right">
                <%= link_to new_supplier_path, { :class=>"btn btn-primary" } do %>
                  <i class="icon-plus icon-white"></i> 
                  Add New
                <% end %>
                <%= link_to "#", { :class=>"btn btn-danger", :id => 'supplier_delete_all', :'data-remote' => true } do %>
                  <i class="icon-trash icon-white"></i> 
                  Delete Selected
                <% end %>
                <%= link_to print_preview_suppliers_path, { :class=>"btn", :id => 'print_all'} do %>
                  <i class="icon-trash icon-white"></i> 
                  Print Preview
                <% end %>
              </td>
            </tr>
            <tr>
              <th><input type="checkbox" id="check_all"/></th>
              <th>Code</th>
              <th>Name</th>
              <th>Address</th>
              <th>Phone</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% @suppliers.each do |supplier| %>
              <tr>
                <td><%= check_box_tag 'myrow_ids[]', supplier.id, false, :class=>"cls_supplier_ids" %></td>
                <td><%= supplier.code %></td>
                <td class="center"><%= supplier.full_name %></td>
                <td class="center"><%= supplier.address %></td>
                <td class="center"><%= supplier.phone_number %></td>
                <td class="center"><span class="label <%= status_label(supplier) %>"><%= supplier.status %></span></td>
                <td class="center">
                  <%= link_to supplier_path(supplier), :class=>"btn btn-success ajax-link" do %>
                    <i class="icon-zoom-in icon-white"></i>  
                    View
                  <% end %>
                  <%= link_to edit_supplier_path(supplier), :class=>"btn btn-info" do %>
                    <i class="icon-edit icon-white"></i>  
                    Edit                                            
                  <% end %>
                  <% if supplier.is_active %>
                    <%= link_to supplier_path(supplier), { :class=>"btn btn-danger", :method=>'delete', :'data-confirm'=>'Anda yakin akan menghapus data ini?' } do %>
                      <i class="icon-trash icon-white"></i> 
                      <span class="hidden-tablet">Delete</span>
                    <% end %>
                  <% else %>
                    <%= link_to supplier_path(supplier, activate: true), { :class=>"btn btn-warning", :method=>'put', :'data-confirm'=>'Anda yakin akan mengaktifkan user ini?' } do %>
                      <i class="icon-ok"></i>
                      <span class="hidden-tablet">Active</span>
                    <% end %>
                  <% end %>
                </td>                
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>