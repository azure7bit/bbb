<div class="box span6">
  <div class="box-content">
    <h2>List Orders</h2>
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
      <thead>
        <tr>
          <th>PO Number</th>
          <th>Date</th>
          <th>Total Amount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% supplier.purchase_orders.each do |po| %>
          <tr>
            <td><%= po.po_number %></td>
            <td class="center"><%= po.po_date.to_formatted_s(:long) %></td>
            <td class="center"><%= number_to_currency(po.total_amount) %></td>
            <td class="center"><%= po.status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to print_orders_supplier_path(@supplier), { :class=>"btn", :id => 'print_all', :target => "_blank"} do %>
      <i class="icon-print"></i> 
      Print Orders
    <% end %>
  </div>
</div><!--/span-->