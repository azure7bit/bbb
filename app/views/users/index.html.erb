<div id="content" class="span10">
  <!-- content starts -->
  <div>
    <ul class="breadcrumb">
      <li>
        <a href="#">Home</a> <span class="divider">/</span>
      </li>
      <li>
        <a href="#">Tables</a>
      </li>
    </ul>
  </div>
  <div class="row-fluid sortable">    
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Members</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <td colspan="6"></td>
              <td class="right">
                <%= link_to new_user_path, { :class=>"btn btn-primary" } do %>
                  <i class="icon-plus icon-white"></i> 
                  Add New
                <% end %>
                <%= link_to "#", { :class=>"btn btn-danger", :id => 'delete_all', :'data-remote' => true } do %>
                  <i class="icon-trash icon-white"></i> 
                  Delete
                <% end %>
              </td>
            </tr>
            <tr>
              <th><input type="checkbox" id="check_all"/></th>
              <th>Username</th>
              <th>Email</th>
              <th>Id Card</th>
              <!-- <th>Date registered</th> -->
              <th>Role</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td><%= check_box_tag 'myrow_ids[]', user.id, false, :class=>"cls_user_ids" %></td>
                <td><%= user.username %></td>
                <td class="center"><%= user.email %></td>
                <td class="center"><%= user.id_card %></td>
                <!-- <td class="center"><%#= user.since %></td> -->
                <td class="center"><%= user.role_name %></td>
                <td class="center">
                  <span class="label <%= status_label(user) %>"><%= user.member_status %></span>
                </td>
                <td class="center">
                  <%= link_to user_path(user), :class=>"ajax-link btn btn-success" do %>
                    <i class="icon-zoom-in icon-white"></i> 
                    <span class="hidden-tablet">View</span>
                  <% end %>
                  <%= link_to edit_user_path(user), :class=>"ajax-link btn btn-info" do %>
                    <i class="icon-edit icon-white"></i>
                    <span class="hidden-tablet">Edit</span>
                  <% end %>
                  <% if user.is_active %>
                    <%= link_to user_path(user), { :class=>"btn btn-danger", :method=>'delete', :'data-confirm'=>'Anda yakin akan menghapus data ini?' } do %>
                      <i class="icon-trash icon-white"></i> 
                      <span class="hidden-tablet">Delete</span>
                    <% end %>
                  <% else %>
                    <%= link_to user_path(user, activate: true), { :class=>"btn btn-warning", :method=>'put', :'data-confirm'=>'Anda yakin akan mengaktifkan user ini?' } do %>
                      <i class="icon-ok"></i>
                      <span class="hidden-tablet">Active</span>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>