<div id="content" class="span10">
  <div class="row-fluid sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Items</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
          <thead>
            <tr>
              <td colspan="9"></td>
              <td colspan="2" class="right">
                <%= link_to new_mix_item_path do %>
                  <i class="icon-plus"></i>
                  Baru
                <% end %>
                <%= link_to "#", { :id => 'item_delete_all', :'data-remote' => true } do %>
                  <i class="icon-trash"></i>
                  Hapus
                <% end %>
                <%= link_to export_items_path(format: "xls") do %>
                  <i class="icon-print"></i> Cetak
                <% end %>
              </td>
            </tr>
            <tr>
              <th><input type="checkbox" id="check_all"/></th>
              <th>Kode</th>
              <th>No. CI</th>
              <th>Nama</th>
              <th>Kategori</th>
              <th>Stok</th>
              <th>Warna</th>
              <th>Status</th>
              <th>Harga</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @items.each_with_index do |item, index| %>
              <tr>
                <td><%= check_box_tag 'myrow_ids[]', item.id, false, :class=>"cls_item_ids" %></td>
                <td><%= item.code %></td>
                <td><%= item.ci_number %></td>
                <td class="center"><%= truncate(item.name, :length => 30) %></td>
                <td class="center"><%= item.category_name %></td>
                <td class="center"><%= item.stock ? number_to_human(item.stock, units: {unit: "kg"}) : "0 kg" %></td>
                <td class="center" style="background-color: #<%= item.color %>"></td>
                <td class="center">
                  <span class="label <%= status_item(item) %>">
                    <%= item.critical %>
                  </span>
                </td>
                <td class="center"><%= item.price %></td>
                <td class="center">
                  <%= link_to item_path(item) do %>
                    <i class="icon-eye-open"></i>
                    View
                  <% end %>
                  <%= link_to edit_mix_item_path(item) do %>
                    <i class="icon-edit"></i>
                    Edit
                  <% end %>
                  <%= link_to mix_item_path(item), :method=>'delete', :'data-confirm'=>'Anda yakin akan menghapus data ini?' do %>
                    <i class="icon-trash"></i>
                    Hapus
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
