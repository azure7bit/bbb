<div class="box span12">
  <div class="box-content">
    <h2>List Items</h2>
    <table id="items-table" class="table table-striped table-bordered responsive">
      <thead>
        <tr>
          <th>Item</th>
          <th></th>
          <th>Qty</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :mix_items do |mix_item| %>
          <tr class="fields">
            <td>
              <!-- <%= mix_item.text_field :item_name, readonly: true, :style=>'max-width:100%;border:none;' %> -->
              <%= mix_item.hidden_field :current_id, readonly: true, :class => 'supplier_item' %>
            </td>
            <td></td>
            <td><%= mix_item.text_field :qty %></td>
            <td><%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, mix_item) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
