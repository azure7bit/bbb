<div id="content" class="span10">
<!-- content starts -->
  <div class="sortable row-fluid">
    <%= link_to items_path, { :class=>"well span3 top-block", :'data-rel'=>"tooltip" } do %>
      <span class="icon32 icon-red icon-inbox"></span>
      <div>Jumlah Barang</div>
      <div><%= @statistic.total_item %></div>
    <% end %>
    <%= link_to suppliers_path, { :class=>"well span3 top-block", :'data-rel'=>"tooltip" } do %>
      <span class="icon32 icon-red icon-user"></span>
      <div>Jumlah Supplier</div>
      <div><%= @statistic.total_supplier %></div>
    <% end %>
    <%= link_to customers_path, { :class=>"well span3 top-block", :'data-rel'=>"tooltip" } do %>
      <span class="icon32 icon-red icon-user"></span>
      <div>Jumlah Customer</div>
      <div><%= @statistic.total_customer %></div>
    <% end %>
    <%= link_to items_path, { :class=>"well span3 top-block", :'data-rel'=>"tooltip" } do %>
      <span class="icon32 icon-color icon-cart"></span>
      <div>Total Penjualan</div>
      <div><%= number_to_currency(@statistic.total_sales) %></div>
    <% end %>
  </div>

  <div class="row-fluid sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-list-alt"></i> Realtime Traffic</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <!-- <div id="realtimechart" style="height:190px;"></div> -->
          <!-- <p class="clearfix">You can update a chart periodically to get a real-time effect by using a timer to insert the new data in the plot and redraw it.</p>
          <p>Time between updates: <input id="updateInterval" type="text" value="" style="text-align: right; width:5em"> milliseconds</p> -->
        <div id="container" style="height: 500px; min-width: 500px"></div>
      </div>
    </div><!--/span-->
  </div><!--/row-->
  <!-- content ends -->
</div><!--/#content.span10-->

<hr>

