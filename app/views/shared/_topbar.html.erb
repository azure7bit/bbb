<div class="navbar">
  <div class="navbar-inner">
    <div class="container-fluid">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".top-nav.nav-collapse,.sidebar-nav.nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
      <a class="brand" href="/"><span>PT. Bandung Bangkit Bersinar</span></a>
      <div class="btn-group pull-right" >
        <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
          <i class="icon-user"></i><span class="hidden-phone"><%= current_user.full_name %></span>
          <span class="caret"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Profile", user_path(current_user) %></li>
          <li class="divider"></li>
          <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %></li>
        </ul>
      </div>
      <div class="pull-right">
        <%= link_to user_path(current_user) do %>
          <%= image_tag(img_url, :class => "user-details-avatar", :style=>'width: 35px; height: 35px;') if current_user %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<% if notice || alert %>
  <div class="alert alert-<%= "#{notice ? 'success' : 'danger'}" %> alert-dismissable", style = "margin-top: 58px;">
    <% if notice %>
      <i class="fa fa-check"></i>
    <% else %>
      <i class="fa fa-ban"></i>
    <% end %>
    <%= link_to "x", "#", class: "close", :"aria-hidden" => true, :"data-dismiss" => "alert" %>
    <strong><%= notice ? notice : alert %></strong>
  </div>
<% end %>
<center>Mohon periksa kurs mata uang dengan mengklik <%= link_to "link", edit_company_path(Company.first) %></center>