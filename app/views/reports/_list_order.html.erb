<fieldset>
  <div class="box span12">
    <div class="box-content">
      <table id="items-table" class="table table-striped table-bordered datatable responsive">
        <thead>
          <tr>
            <th>No.</th>
            <th>Invoice No.</th>
            <th>Date</th>
            <th><%= @report_type == "sales_by_date" ? "Customer" : "Supplier" %></th>
            <th>Nama Barang</th>
            <th>Harga</th>
            <th>Qty</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% @previews.each do |preview| %>
            <tr>
              <td><%= preview[:no] %></td>
              <td><%= preview[:invoice_no] %></td>
              <td><%= preview[:date] %></td>
              <td><%= preview[:customer] %></td>
              <td><%= preview[:item] %></td>
              <td><%= number_to_currency(preview[:price]) %></td>
              <td><%= number_to_human(preview[:qty], units: {unit: "kg"}) %></td>
              <td>
                <%= number_to_currency(preview[:subtotal]) %>
                <% @total = number_to_currency(preview[:total]) %>
              </td>
            </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td colspan="7">Total</td>
            <td><%= @total %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</fieldset>