<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-edit"></i> Create Purchase Order</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <%= form_for :reports, :html => { :class=>"form-horizontal" } do |f| %>
          <fieldset>
            <div class="row-fluid sortable">
              <div class="box span6">
                <div class="box-content">
                  <h3>Purchase Order by Date</h3>
                  <br>
                  <div class="control-group">
                    <%= f.label :report_type, "Select Report", :class => "control-label" %>
                    <div class="controls">
                      <%= f.select :report_type, options_for_select(report_types),{:prompt => 'Choose Report'} %>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= f.label :start_date, "Start Date", :class => "control-label" %>
                    <div class="controls">
                      <%= f.text_field :start_date, :class=>"input-xlarge", :placeholder => "date here .." %>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= f.label :end_date, "End Date", :class => "control-label" %>
                    <div class="controls">
                      <%= f.text_field :end_date, :class=>"input-xlarge", :placeholder => "date here .." %>
                    </div>
                  </div>
                  <div class="form-actions">
                    <%= f.submit 'Submit', :class => "btn btn-primary" %>
                  </div>
                </div>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>

<script type="text/javascript">
$(document).ready(function () {
  $("#reports_start_date").datepicker({
    dateFormat: "dd-mm-yy",
    onClose: function( selectedDate ) {
      $( "#reports_end_date" ).datepicker( "option", "minDate", selectedDate );
    }
  });

  $("#reports_end_date").datepicker({
    dateFormat: "dd-mm-yy",
    onClose: function( selectedDate ) {
      $( "#reports_start_date" ).datepicker( "option", "maxDate", selectedDate );
    }
  });
});

</script>