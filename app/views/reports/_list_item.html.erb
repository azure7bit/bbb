<fieldset>
  <div class="box span12">
    <div class="box-content">
      <div class="span6">
        <h2>List Items In</h2>
          <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
            <thead>
              <tr>
                <th>No.</th>
                <th>#Order</th>
                <th>Date</th>
                <th>Qty</th>
                <th>Supplier</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody>
              <% @previews.first[:item_ins].each do |item| %>
                <tr>
                  <td class="center"><%= item[:no] %></td>
                  <td class="center"><%= item[:invoice_no] %></td>
                  <td class="center"><%= item[:date] %></td>
                  <td class="center"><%= number_to_human(item[:qty], units: {unit: "kg"}) %></td>
                  <td class="center"><%= item[:supplier] %></td>
                  <td class="center"><%= number_to_currency(item[:price]) %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
      </div>
      <div class="span6">
        <h2>List Items Out</h2>
        <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
          <thead>
            <tr>
              <th>No</th>
              <th>#Order</th>
              <th>Date</th>
              <th>Qty</th>
              <th>Customer</th>
              <th>Price</th>
            </tr>
          </thead>
          <tbody>
            <% @previews.first[:item_outs].each do |item| %>
              <tr>
                  <td class="center"><%= item[:no] %></td>
                  <td class="center"><%= item[:invoice_no] %></td>
                  <td class="center"><%= item[:date] %></td>
                  <td class="center"><%= number_to_human(item[:qty], units: {unit: "kg"}) %></td>
                  <td class="center"><%= item[:customer] %></td>
                  <td class="center"><%= number_to_currency(item[:price]) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</fieldset>