<fieldset>
  <div class="row-fluid sortable">
    <div class="box span6">
      <div class="box-content">
        <div class="control-group">
          <%= f.label :invoice_number, "Invoice Number", :class => "control-label" %>
          <div class="controls invoice_number">
            <%= f.text_field :invoice_number, :class=>"input-xlarge", :placeholder => "invoice number here ..", :autofocus => true, :readonly => true, :value => @invoice_number %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :transaction_date, "Invoice Date", :class => "control-label" %>
          <div class="controls po_date">
            <%= f.text_field :transaction_date, :class=>"input-xlarge", :placeholder => "date here ..", :readonly => true, :value => @po_date %>
          </div>
        </div>
      </div>
    </div>
    <div class="box span6">
      <div class="box-content">
        <div class="control-group">
          <%= f.label :customer_id, "Supplier Name", :class => "control-label" %>
          <div class="controls supplier">
            <%= f.select :customer_id, options_from_collection_for_select(@customers, "id","full_id"),{:prompt => 'Choose Customer'} if @customers %>
          </div>
        </div>
        <%= f.fields_for :customer do |f| %>
        <div class="control-group">
          <%= f.label :address, "Address", :class => "control-label" %>
          <div class="controls">
            <%= f.text_area :address, :rows => 2, :disabled => 'disabled', :class=>"input-xlarge", :placeholder => "customer address here .." %>
          </div>
        </div>
        <div class="control-group">
          <%= f.label :city, "City", :class => "control-label" %>
          <div class="controls">
            <%= f.text_field :city, :disabled => 'disabled', :class=>"input-xlarge", :placeholder => "customer city here .." %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
  </div>
  <%#= render "supplier_items" %>
</fieldset>
<fieldset>