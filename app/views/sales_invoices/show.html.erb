<style>
  .form-horizontal .control-label {
    float: left;
    padding-top: 5px;
    text-align: left;
    width: 140px;
  }
</style>

<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-edit"></i> Sales Invoice Details</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <%= form_for(@sales_invoice, :html => { :class=>"form-horizontal" }) do |f| %>
          <fieldset>
            <div class="row-fluid sortable">
              <div class="box span6">
                <div class="box-content">
                  <div class="control-group">
                    <%= f.label :invoice_number, "Invoice Number", :class => "control-label" %>
                    <div class="controls invoice_number">
                      <%= f.label :invoice_number, @sales_invoice.invoice_number, :class => "control-label" %>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= f.label :transaction_date, "Date", :class => "control-label" %>
                    <div class="controls transaction_date">
                      <%= f.label :transaction_date, @sales_invoice.transaction_date.to_formatted_s(:long), :class => "control-label" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="box span6">
                <div class="box-content">
                  <div class="control-group">
                    <%= f.label :customer_id, "Supplier Name", :class => "control-label" %>
                    <div class="controls supplier">
                      <%= f.label :customer_id, @sales_invoice.customer_full_name, :class => "control-label" %>
                    </div>
                  </div>
                  <%= f.fields_for :customer do |f| %>
                    <div class="control-group">
                      <%= f.label :address, "Address", :class => "control-label" %>
                      <div class="controls">
                        <%= f.label :address, @sales_invoice.customer_address, :class => "control-label" %> 
                      </div>
                    </div>
                    <div class="control-group">
                      <%= f.label :phone, "Phone", :class => "control-label" %>
                        <div class="controls">
                          <%= f.label :phone, @sales_invoice.customer_phone_number, :class => "control-label" %>
                        </div>
                    </div>
                    <div class="control-group">
                      <%= f.label :npwp, :class => "control-label" %>
                      <div class="controls">
                        <%= f.label :npwp, @sales_invoice.customer_npwp ? @sales_invoice.customer_npwp : '-', :class => "control-label" %>
                      </div>
                    </div>  
                  <% end %>
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="box span12">
              <div class="box-content">
                <h2>List Items</h2>
                <table id="items-table" class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Nama Barang</th>
                      <th>Harga</th>
                      <th>Harga(Rp)</th>
                      <th>qty</th>
                      <th>Subtotal</th>
                      <th>Subtotal(Rp)</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @sales_invoice.sales_invoice_details.each_with_index do |detail, i| %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= detail.item_name %></td>
                        <td><%= number_to_currency(detail.retail_price) %></td>
                        <td><%= number_to_currency(detail.retail_price * @sales_invoice.kurs, unit: "Rp") %></td>
                        <td><%= number_to_human(detail.qty, units: {unit: "kg"}) %></td>
                        <td><%= number_to_currency(detail.subtotal) %></td>
                        <td><%= number_to_currency(detail.subtotal * @sales_invoice.kurs, unit: "Rp") %></td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfooter>
                    <tr>
                      <td colspan="5">Total</td>
                      <td><%= number_to_currency(@sales_invoice.total_sales_orders) %></td>
                      <td><%= number_to_currency(@sales_invoice.total_sales_orders * @sales_invoice.kurs, unit: "Rp") %></td>
                    </tr>
                    <tr>
                      <td colspan="5">PPN(10%)</td>
                      <td><%= number_to_currency(@sales_invoice.total_ppn) %></td>
                      <td><%= number_to_currency(@sales_invoice.total_sales_orders * @sales_invoice.kurs, unit: "Rp") %></td>
                    </tr>
                    <tr>
                      <td colspan="5">Grand Total</td>
                      <td><%= number_to_currency(@sales_invoice.grand_total) %></td>
                      <td><%= number_to_currency(@sales_invoice.total_sales_orders * @sales_invoice.kurs, unit: "Rp") %></td>
                    </tr>
                  </tfooter>
                </table>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="form-actions">              
              <%= link_to "Print", print_invoice_sales_invoice_path(@sales_invoice), :class => "btn btn-primary" %>
              <button id="cancel-edit" class="btn">Cancel</button>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>