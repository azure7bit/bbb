<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">    
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Sales Orders</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <td colspan="3"></td>
              <td class="right">
                <%= link_to new_sales_invoice_path do %>
                  <i class="icon-plus"></i> 
                  Baru
                <% end %>
              </td>
            </tr>
            <tr>
              <th>#Invoice</th>
              <th>Tanggal</th>
              <th>Customer</th>
              <th>Total Penjualan</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% @sales_invoices.each do |sales_invoice| %>
              <tr>
                <td><%= sales_invoice.invoice_number %></td>
                <td class="center"><%= sales_invoice.transaction_date %></td>
                <td class="center"><%= sales_invoice.customer_full_name if sales_invoice.customer %></td>
                <td class="center"><%= sales_invoice.total_sales_orders %></td>
                <td class="center">
                  <%= link_to sales_invoice_path(sales_invoice), :class=>"btn btn-success" do %>
                    <i class="icon-zoom-in icon-white"></i>  
                    View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>