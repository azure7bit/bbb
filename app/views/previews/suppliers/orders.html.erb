<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">
    <div class="box span12">
      <div class="box-content">
        <h2><i class="icon-edit"></i>Supplier Orders</h2>
        <ul class="dashboard-list">
          <li>
            <strong>Code: </strong> <a href="#"><%= @supplier.code if @supplier %></a><br>
            <strong>Name: </strong> <a href="#"><%= @supplier.full_name if @supplier %></a><br>
            <strong>Address: </strong> <a href="#"><%= @supplier.address if @supplier %></a><br>
            <strong>Phone number: </strong> <a href="#"><%= format_phone(@supplier.phone_number) if @supplier %></a><br>
          </li>
        </ul>
      </div>
      <div class="row-fluid sortable">
        <div class="box span6">
          <div class="box-content">
            <h2>List Orders</h2>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
              <thead>
                <tr>
                  <th>PO Number</th>
                  <th>Date</th>
                  <th>Total Amount</th>
                  <th>Status</th>
                </tr>
              </thead>
              <tbody>
                <% @supplier.purchase_orders.each do |po| %>
                  <tr>
                    <td><%= po.po_number %></td>
                    <td class="center"><%= po.po_date.to_formatted_s(:long) %></td>
                    <td class="center"><%= number_to_currency(po.total_amount) %></td>
                    <td class="center"><%= po.status %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div><!--/span-->
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>