<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2>Receive Order Details</h2>
      </div>
      <div class="box-content">
        <%= form_for("receive order", :html => { :class=>"form-horizontal" }) do |f| %>
          <fieldset>
            <div class="row-fluid sortable">
              <div class="box span6">
                <div class="box-content">
                  <div class="control-group">
                    <%= f.label :invoice_number, :class => "control-label" %>
                    <div class="controls po_number">
                      <%= f.label :invoice_number, @receive_order.invoice_number, :class => "control-label" %>
                    </div>
                  </div>
                  <div class="control-group">
                    <%= f.label :transaction_date, :class => "control-label" %>
                    <div class="controls po_date">
                      <%= f.label :transaction_date, @receive_order.transaction_date.to_formatted_s(:long), :class => "control-label" %>
                    </div>
                  </div>
                </div>
              </div>
              <div class="box span6">
                <div class="box-content">
                  <div class="control-group">
                    <%= f.label :supplier_id, "Supplier Name", :class => "control-label" %>
                    <div class="controls supplier">
                      <%= f.label :supplier_id, @receive_order.supplier_full_name, :class => "control-label" %>
                    </div>
                  </div>
                  <%= f.fields_for :supplier do |f| %>
                    <div class="control-group">
                      <%= f.label :address, "Address", :class => "control-label" %>
                      <div class="controls">
                        <%= f.label :address, @receive_order.supplier_address, :class => "control-label" %> 
                      </div>
                    </div>
                    <div class="control-group">
                      <%= f.label :phone, "Phone", :class => "control-label" %>
                        <div class="controls">
                          <%= f.label :phone, @receive_order.supplier_phone_number, :class => "control-label" %>
                        </div>
                    </div>
                    <div class="control-group">
                      <%= f.label :contact_person, "Sales Person", :class => "control-label" %>
                      <div class="controls">
                        <%= f.label :contact_person, @receive_order.supplier_contact_person, :class => "control-label" if @receive_order.supplier_contact_person %>
                      </div>
                    </div>  
                  <% end %>
                </div>
              </div>
            </div>
          </fieldset>

          <fieldset>
            <div class="box span12">
              <div class="box-content">
                <h2>List Items</h2>
                <table id="items-table" class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th>No.</th>
                      <th>Nama Barang</th>
                      <th>Harga</th>
                      <th>Harga(Rp)</th>
                      <th>qty</th>
                      <th>Subtotal</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% @receive_order.po_receive_details.each_with_index do |detail, i| %>
                      <tr>
                        <td><%= i+1 %></td>
                        <td><%= detail.item_name %></td>
                        <td><%= number_to_currency(detail.price) %></td>
                        <td><%= usd_to_idr(detail.price) %></td>
                        <td><%= number_to_human(detail.qty, units: {unit: "kg"}) %></td>
                        <td><%= number_to_currency(detail.subtotal) %></td>
                      </tr>
                    <% end %>
                  </tbody>
                  <tfooter>
                    <tr>
                      <td colspan="5"><strong>Total</strong></td>
                      <td><%= number_to_currency(@receive_order.total_amount) %></td>
                    </tr>
                    <tr>
                      <td colspan="5"><strong>PPN(10%)</strong></td>
                      <td><%= number_to_currency(@receive_order.ppn) %></td>
                    </tr>
                    <tr>
                      <td colspan="5"><strong>Grand Total</strong></td>
                      <td><%= number_to_currency(@receive_order.grand_total_amount) %></td>
                    </tr>
                  </tfooter>
                </table>
              </div>
            </div>
          </fieldset>
        <% end %>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>