<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">    
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Category</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <td colspan="5"></td>
              <td class="right">
                <%= link_to new_category_path do %>
                  <i class="icon-plus"></i> 
                  Baru
                <% end %>
                <%= link_to "#", { :id => 'category_delete_all', :'data-remote' => true } do %>
                  <i class="icon-trash"></i> 
                  Hapus
                <% end %>
                <%= link_to export_categories_path(format: "xls") do %>
                  <i class="icon-folder-open"></i> Export
                <% end %>
              </td>
            </tr>
            <tr>
              <th><input type="checkbox" id="check_all"/></th>
              <th>Kode</th>
              <th>Nama</th>
              <th>Satuan</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= check_box_tag 'myrow_ids[]', category.id, false, :class=>"cls_category_ids" %></td>
                <td><%= category.code %></td>
                <td class="center"><%= category.name %></td>
                <td class="center"><%= category.unit %></td>
                <td class="center"><span class="label <%= status_label(category) %>"><%= category.status %></span></td>
                <td class="center">
                  <%= link_to category_path(category) do %>
                    <i class="icon-eye-open"></i>  
                    Lihat
                  <% end %>
                  <%= link_to edit_category_path(category) do %>
                    <i class="icon-edit"></i>  
                    Edit                                            
                  <% end %>
                  <% if category.is_active %>
                    <%= link_to category_path(category), { :method=>'delete', :'data-confirm'=>'Anda yakin akan menghapus data ini?' } do %>
                      <i class="icon-trash"></i> 
                      Hapus
                    <% end %>
                  <% else %>
                    <%= link_to category_path(category, activate: true), { :class=>"btn btn-warning", :method=>'put', :'data-confirm'=>'Anda yakin akan mengaktifkan user ini?' } do %>
                      <i class="icon-ok"></i>
                      <span class="hidden-tablet">Active</span>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>