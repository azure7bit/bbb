<fieldset>
  <div class="box span12">
    <div class="box-content">
      <table id="items-table" class="table table-striped table-bordered datatable responsive">
        <thead>
          <tr>
            <th>Date</th>
            <th>Invoice No.</th>
            <th>Supplier</th>
            <th>Notes</th>
            <th colspan="2">Mutasi</th>
            <th>Saldo</th>
          </tr>
        </thead>
        <tbody>
          <% @payments.each do |payment| %>
            <tr>
              <td><%= payment[:transaction_date] %></td>
              <td><%= payment[:invoice_number] %></td>
              <td><%= payment[:supplier] %></td>
              <td><%= payment[:notes] %></td>
              <td><%= number_to_currency(payment[:amount]) %></td>
              <td><%= payment[:balance_type] %></td>
              <td><%= number_to_currency(payment[:balance]) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</fieldset>