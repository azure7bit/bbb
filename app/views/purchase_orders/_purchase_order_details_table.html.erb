<div class="box span12">
  <div class="box-content">
    <h2>List Items</h2>
    <table id="items-table" class="table table-striped table-bordered responsive">
      <thead>
        <tr>
          <th>Nama Barang</th>
          <th>Harga</th>
          <th>qty</th>
          <th>Subtotals</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <%= f.fields_for :purchase_order_details do |detail| %>
          <tr class="fields">
            <%= f.fields_for :items do |item| %>
              <td>
                <%= detail.hidden_field :item_id %>
                <%= item.text_field :name, readonly: true %>
              </td>
            <% end %>
            <td>
              <%= text_field_tag :price, nil, readonly: true, :onkeypress=>"return numbersonly(event)", :onkeyup => "totalTransaction(this)" %>
            </td>
            <td><%= detail.text_field :qty %></td>
            <td><%= detail.text_field :subtotal, readonly: true %></td>
            <td><%= link_to_remove_fields('<i class="icon-remove"></i>'.html_safe, detail) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
