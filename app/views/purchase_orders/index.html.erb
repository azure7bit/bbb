<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">    
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Purchase Orders</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <td colspan="3"></td>
              <td class="right">
                <%= link_to new_purchase_order_path, { :class=>"btn btn-primary" } do %>
                  <i class="icon-plus icon-white"></i> 
                  Add New
                <% end %>
              </td>
            </tr>
            <tr>
              <th>PO Number</th>
              <th>Date</th>
              <th>Supplier</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% @purchase_orders.each do |purchase_order| %>
              <tr>
                <td><%= purchase_order.po_number %></td>
                <td class="center"><%= purchase_order.po_date %></td>
                <td class="center"><%= purchase_order.supplier.full_name if purchase_order.supplier %></td>
                <td class="center">
                  <%= link_to purchase_order_path(purchase_order), :class=>"btn btn-success" do %>
                    <i class="icon-zoom-in icon-white"></i>  
                    View
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>