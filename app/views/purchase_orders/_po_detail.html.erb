<div class="box span12">
  <div class="box-content">
    <h2>List Items</h2>
    <table class="table table-striped table-bordered bootstrap-datatable datatable">
      <thead>
        <tr>
          <th>Code Items</th>
          <th>CI Number</th>
          <th>Item</th>
          <th>Qty</th>
          <th>Price</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% purchase_order.items.each do |item| %>
          <tr>
            <td><%= item.code %></td>
            <td class="center"><%= item.ci_number %></td>
            <td class="center"><%= item.name %></td>
            <td class="center"><%= number_to_human(purchase_order.purchase_order_details.find_by_item_id(item.id).qty) %></td>
            <td class="center"><%= number_to_currency(purchase_order.purchase_order_details.find_by_item_id(item.id).price) %></td>
            <td class="center"><%= number_to_currency(purchase_order.purchase_order_details.find_by_item_id(item.id).subtotal) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div><!--/span-->