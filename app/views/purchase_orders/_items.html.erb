<div class="box-content">
  <table class="table table-striped table-bordered bootstrap-datatable datatable">
    <thead>
      <tr>
        <th>Select</th>
        <th>Item Code</th>
        <th>Item Name</th>
      </tr>
    </thead>   
    <tbody>
      <% @supplier_items.each do |item| %>
        <tr>
          <td class="center"><%= check_box_tag 'purchase_order[item_ids][]', item.id, false, :class=>"cls_item_ids" %></td>
          <td><%= item.code %></td>
          <td class="center"><%= item.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>