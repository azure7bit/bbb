<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">    
    <div class="box span12">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Items</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered bootstrap-datatable datatable">
          <thead>
            <tr>
              <td colspan="9"></td>
              <td colspan="2" class="right">
                <%= link_to new_item_path, { :class=>"btn btn-primary" } do %>
                  <i class="icon-plus icon-white"></i> 
                  Add New
                <% end %>
                <%= link_to "#", { :class=>"btn btn-danger", :id => 'item_delete_all', :'data-remote' => true } do %>
                  <i class="icon-trash icon-white"></i> 
                  Delete
                <% end %>
              </td>
            </tr>
            <tr>
              <th><input type="checkbox" id="check_all"/></th>
              <th>No</th>
              <th>Code</th>
              <th>#CI</th>
              <th>Items</th>
              <th>Category</th>
              <th>Stock</th>
              <th>Price</th>
              <th>Color</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>   
          <tbody>
            <% @items.each_with_index do |item, index| %>
              <tr>
                <td><%= check_box_tag 'myrow_ids[]', item.id, false, :class=>"cls_item_ids" %></td>
                <td><%= index + 1 %></td>
                <td><%= item.code %></td>
                <td><%= item.ci_number %></td>
                <td class="center"><%= truncate(item.name, :length => 30) %></td>
                <td class="center"><%= item.category_name %></td>
                <td class="center"><%= number_to_human(item.stock, units: {unit: "kg"}) %></td>
                <td class="center"><%= number_to_currency(item.retail_price) %></td>
                <td class="center" style="background-color: #<%= item.color %>"></td>
                <td class="center"><span class="label <%= status_label(item) %>"><%= item.status %></span></td>
                <td class="center">
                  <%= link_to item_path(item), :class=>"btn btn-success" do %>
                    <i class="icon-zoom-in icon-white"></i>  
                    View
                  <% end %>
                  <%= link_to edit_item_path(item), :class=>"btn btn-info" do %>
                    <i class="icon-edit icon-white"></i>  
                    Edit                                            
                  <% end %>
                  <% if item.is_active %>
                    <%= link_to item_path(item), { :class=>"btn btn-danger", :method=>'delete', :'data-confirm'=>'Anda yakin akan menghapus data ini?' } do %>
                      <i class="icon-trash icon-white"></i> 
                      <span class="hidden-tablet">Delete</span>
                    <% end %>
                  <% else %>
                    <%= link_to item_path(item, activate: true), { :class=>"btn btn-warning", :method=>'put', :'data-confirm'=>'Anda yakin akan mengaktifkan user ini?' } do %>
                      <i class="icon-ok"></i>
                      <span class="hidden-tablet">Active</span>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>            
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>