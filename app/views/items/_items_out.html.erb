<table class="table table-striped table-bordered bootstrap-datatable datatable">
  <thead>
    <tr>
      <th>#Order</th>
      <th>Date</th>
      <th>Qty</th>
      <th>Customer</th>
      <th>Price</th>
    </tr>
  </thead>
  <tbody>
    <% item.sales_invoice_details.each_with_index do |item, index| %>
      <tr>
        <td class="center"><%= item.sales_invoice.invoice_number %></td>
        <td class="center"><%= item.sales_invoice.transaction_date.to_formatted_s(:long) %></td>
        <td class="center"><%= number_to_human(item.qty, units: {unit: "kg"}) %></td>
        <td class="center"><%= item.sales_invoice.customer_full_name %></td>
        <td class="center"><%= number_to_currency(item.subtotal / item.qty) %></td>
      </tr>
    <% end %>
  </tbody>
</table>