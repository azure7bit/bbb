<div id="content" class="span10">
  <!-- content starts -->
  <div class="row-fluid sortable">
    <div class="box span6">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Transaction History (Dollar)</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered responsive">
          <thead>
            <tr>
              <th>#</th>
              <th>Tanggal</th>
              <th>name</th>
              <th>from</th>
              <th>saldo</th>
            </tr>
          </thead>
          <tbody>
            <% if @transaction_dollar.any? %>
            <% @transaction_dollar.each_with_index do |td, i| %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= td.created_at.to_formatted_s(:long) %></td>
                <td class="center"><%= td.name %></td>
                <td class="center"><%= td.from_transaction %></td>
                <td class="center">
                  <%= number_to_currency(td.saldo) %>
                </td>
              </tr>
            <% end %>
            <% else %>
            <tr><td colspan="5">Not Found</td></tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div><!--/span-->

    <div class="box span6">
      <div class="box-header well" data-original-title>
        <h2><i class="icon-user"></i> Transaction History (Rupiah)</h2>
        <div class="box-icon">
          <a href="#" class="btn btn-setting btn-round"><i class="icon-cog"></i></a>
          <a href="#" class="btn btn-minimize btn-round"><i class="icon-chevron-up"></i></a>
          <a href="#" class="btn btn-close btn-round"><i class="icon-remove"></i></a>
        </div>
      </div>
      <div class="box-content">
        <table class="table table-striped table-bordered responsive">
          <thead>
            <tr>
              <th>#</th>
              <th>Tanggal</th>
              <th>name</th>
              <th>from</th>
              <th>saldo</th>
            </tr>
          </thead>
          <tbody>
          <% if @transaction_rupiah.any? %>
            <% @transaction_rupiah.each_with_index do |td, i| %>
              <tr>
                <td><%= i+1 %></td>
                <td><%= td.created_at.to_formatted_s(:long) %></td>
                <td class="center"><%= td.name %></td>
                <td class="center"><%= td.from_transaction %></td>
                <td class="center">
                  <%= number_to_currency(td.saldo, unit: "Rp") %>
                </td>
              </tr>
            <% end %>
          <% else %>
          <tr><td colspan="5">Not Found</td></tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div>
