<div class="box-content">
  <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
    <thead>
      <tr>
        <th>#Order</th>
        <th>Date</th>
        <th>Total</th>
      </tr>
    </thead>
    <tbody>
      <% customer.sales_invoices.each_with_index do |so, index| %>
        <tr>
          <td class="center"><%= so.invoice_number %></td>
          <td class="center"><%= so.transaction_date %></td>
          <td class="center"><%= number_to_currency(so.total_sales_orders) %></td>
        </tr>
      <% end %>
    </tbody>
    <tfooter>
      <tr>
        <td colspan="2"><strong>Total</strong></td>
        <td colspan="2"><strong><%= number_to_currency(@customer.total_pay_for_orders) %></strong></td>
      </tr>
    </tfooter>
  </table>
</div>